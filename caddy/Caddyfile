metrics.jackreid.xyz {
  encode gzip
  log

  reverse_proxy /prometheus http://prometheus:9090 {
    health_path /
    health_interval 10s
  }
  
  reverse_proxy * http://grafana:3000 {
    health_path /
    health_interval 10s
  }
}

api.jackreid.xyz {
  encode gzip
  log

  reverse_proxy * http://api:3000 {
    health_path /
    health_interval 10s
  }
}
